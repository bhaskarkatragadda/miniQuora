    </script>
    <style type="text/css">
        body {
            background-image: url("/images/bg.png");

        }

        .container {
            position: absolute;
            top: 20%;
            right: 35%;
            height: 400px;
            width: 35%;
            border-radius: 20px;
            background-color: white;
            opacity: 1;
            box-shadow: 0 5.9px 5.4px -54px rgba(0, 0, 0, 0.348),
            0 16.3px 14.9px -54px rgba(0, 0, 0, 0.5),
            0 39.2px 35.9px -54px rgba(0, 0, 0, 0.652),
            0 130px 119px -54px rgba(0, 0, 0, 1);


        }

        #heading {
            opacity: 1;
            color: maroon;
            text-align: center;
        }

        #form1 {

            text-align: left;
        }

        .box1 {
            position: absolute;
            height: 200px;
            width: 50%;
            right: 15%;

        }

        #sub {
            position: absolute;
            right: 55%;
        }

    </style>
</head>
<body>
<div class="container">
    <h1 id="heading">MiniQuora</h1>
    <br>
    <div class="box1">
        <form id="form1" action="/" method="post">
            <p>
            <h3>Username</h3></p>
            <input type="text" placeholder="username" id="us" name="name">
            <p id="abc"></p>
            <p>
            <h3>Password</h3></p>
            <input type="password" placeholder="password" id="pass" name="password">
            <p id="abc1">
                <% if(typeof (errorMessage) != "undefined"){ %>
                    <%= errorMessage %>
                <% } %>
            </p>
            <br>
            <input type="submit" name="submit" value="Login" id="sub">
        </form>
    </div>
</div>


</body>
</html>