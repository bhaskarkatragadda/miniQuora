<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        function check() {
            if (document.getElementById('us').value == "") {
                x = "enter username";
                document.getElementById('abc').innerHTML = x;
                document.getElementById('us').select();
                return false;
            } else if (document.getElementById('pass').value == "") {
                x = "enter password";
                document.getElementById('abc1').innerHTML = x;
                document.getElementById('pass').select();
                return false;
            } else if (document.getElementById('pass2').value == "") {
                x = "enter password";
                document.getElementById('abc2').innerHTML = x;
                document.getElementById('pass2').select();
                return false;
            } else if (document.getElementById('pass').value != document.getElementById('pass2').value) {
                x = " check entered password";
                document.getElementById('abc2').innerHTML = x;
                document.getElementById('pass2').select();
                return false;
            } else if (document.getElementById('email1').value == "") {
                x = "enter email";
                document.getElementById('abc3').innerHTML = x;
                document.getElementById('email1').select();
